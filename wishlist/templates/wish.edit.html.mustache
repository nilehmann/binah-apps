<!doctype html>
<html lang="en-US">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" 
              content="width=device-width, initial-scale=1">
    </head>
    <body>
        <h1>New Wish</h1>
        <form action="{{action}}" method="POST">
            <label for="description">Description</label>
            <input type="text" 
                   id="description" 
                   name="description"
                   value="{{description}}" />
            <br/>
            <label for="accessLevel">Access Level</label>
            <select type="text" 
                    id="accessLevel" 
                    name="accessLevel">
                {{#accessLevels}}
                <option value="{{value}}" {{selected}}>{{label}}</option>
                {{/accessLevels}}
            </select>
            <br/>
            <input type="submit" value="Submit">
        </form>
    </body>
</html>